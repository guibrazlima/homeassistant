# 22:00 â€” garantir permitido
- id: ev_allow_at_22
  alias: "ğŸš— EV (cFos) â€” Permitir Ã s 22:00"
  trigger:
    - platform: time
      at: "22:00:00"
  action:
    - service: switch.turn_on
      target:
        entity_id: switch.wallbox_charging_enabled

# 08:00 â€” voltar ao controlo do gate (uma avaliaÃ§Ã£o imediata)
- id: ev_reapply_gate_at_08
  alias: "ğŸš— EV (cFos) â€” Reaplicar gate Ã s 08:00"
  trigger:
    - platform: time
      at: "08:00:00"
  action:
    - if:
        - condition: template
          value_template: >-
            {% set pump_on = is_state('switch.bomba_piscina_switch_0','on') %}
            {% set m = states('input_number.piscina_filtracao_min_restantes') %}
            {% set pool_done = (m not in ['unknown','unavailable',''] and (m|float(0) <= 0)) %}
            {{ not (pump_on or pool_done) }}
      then:
        - service: switch.turn_off
          target:
            entity_id: switch.wallbox_charging_enabled
